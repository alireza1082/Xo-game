<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    tools:context=".GameBoard">

    <TextView
        android:id="@+id/current_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/board"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/app_name"
        android:layout_marginBottom="36dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/x_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="44dp"
        android:text="@string/x_point"
        android:layout_marginTop="44dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/o_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/o_point"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

<LinearLayout
    android:id="@+id/board"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="10dp"
    android:background="@drawable/board"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:weightSum="3">
<LinearLayout
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/c0"
        android:layout_margin="10dp"
        android:onClick="click"
        android:tag="0"
        tools:ignore="NestedWeights"
        android:contentDescription="@string/cell_1" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/c1"
        android:layout_margin="10dp"
        android:onClick="click"
        android:tag="1"
        android:contentDescription="@string/cell_2"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/c2"
        android:layout_margin="10dp"
        android:onClick="click"
        android:tag="2"
        android:contentDescription="@string/cell_3"/>
</LinearLayout>
<LinearLayout
    android:layout_weight="1"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/c3"
        android:onClick="click"
        android:tag="3"
        tools:ignore="NestedWeights"
        android:contentDescription="@string/cell_4"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/c4"
        android:onClick="click"
        android:tag="4"
        android:contentDescription="@string/cell_5"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:onClick="click"
        android:id="@+id/c5"
        android:tag="5"
        android:contentDescription="@string/cell_6"/>
</LinearLayout>
<LinearLayout
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/c6"
        android:onClick="click"
        android:tag="6"
        tools:ignore="NestedWeights"
        android:contentDescription="@string/cell_7"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:onClick="click"
        android:id="@+id/c7"
        android:tag="7"
        android:contentDescription="@string/cell_8"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/c8"
        android:onClick="click"
        android:tag="8"
        android:contentDescription="@string/cell_9"/>
</LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>